<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <EditText
        android:layout_marginTop="20sp"
        android:id="@+id/TF_location"
        android:layout_width="290dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginStart="5sp"
        android:layout_marginBottom="5sp"
        android:fontFamily="@font/oswald"
        android:textColor="@color/darkGray"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/B_search"
        android:layout_width="100sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/TF_location"
        android:onClick="onClick"
        android:layout_height="35sp"
        android:layout_marginTop="22sp"
        android:fontFamily="@font/oswald"
        android:textColor="@color/white"
        android:elevation="8sp"
        android:background="@color/colorPrimary"
        android:text="Search" />


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.priyanka.mapsdemo.MapsActivity"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/B_hopistals" />

    <Button
        android:id="@+id/B_hopistals"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TF_location"
        android:onClick="onClick"
        android:layout_height="35sp"
        android:layout_margin="5sp"
        android:elevation="8sp"
        android:fontFamily="@font/oswald"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:text="Hospitals" />


    <Button
        android:id="@+id/B_toPharmacy"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@+id/B_hopistals"
        android:layout_toEndOf="@+id/B_hopistals"
        android:onClick="onClick"
        android:layout_height="35sp"
        android:elevation="8sp"
        android:fontFamily="@font/oswald"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:text="To pharmacy" />


</RelativeLayout>